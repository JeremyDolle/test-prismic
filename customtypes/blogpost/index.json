{
  "format": "page",
  "id": "blogpost",
  "label": "BlogPost",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "title",
          "placeholder": "Fill with a good article title",
          "allowTargetBlank": false,
          "single": "heading1"
        }
      },
      "content": {
        "type": "StructuredText",
        "config": {
          "label": "content",
          "placeholder": "fill with the article content",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading2,heading3,heading4,heading5,heading6,strong,em,list-item,o-list-item"
        }
      },
      "author": {
        "type": "Link",
        "config": {
          "label": "author",
          "select": "document",
          "customtypes": ["author"]
        }
      },
      "summary": {
        "type": "StructuredText",
        "config": {
          "label": "summary",
          "placeholder": "Fill with a summary",
          "allowTargetBlank": false,
          "multi": "paragraph,strong,em,list-item,o-list-item"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
